<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/months_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/months_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:background="#999D9CAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/months_rv" />

    <TextView
        android:id="@+id/months_pointer"
        android:layout_width="3dp"
        android:layout_height="15dp"
        android:visibility="invisible"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@id/months_line"
        app:layout_constraintEnd_toEndOf="@id/months_line"
        app:layout_constraintStart_toStartOf="@id/months_line"
        app:layout_constraintTop_toBottomOf="@+id/months_rv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/days_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/months_line" />


    <TextView
        android:id="@+id/days_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:background="#999D9CAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/days_rv" />

    <TextView
        android:id="@+id/days_pointer"
        android:layout_width="3dp"
        android:layout_height="15dp"
        android:visibility="invisible"
        android:background="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/days_line"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/days_rv" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/years_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/days_line" />

    <TextView
        android:id="@+id/years_line"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="12dp"
        android:background="#999D9CAA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/years_rv" />

    <TextView
        android:id="@+id/years_pointer"
        android:layout_width="3dp"
        android:layout_height="15dp"
        android:visibility="invisible"
        android:background="@color/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/years_line"
        app:layout_constraintTop_toBottomOf="@+id/years_rv" />
</androidx.constraintlayout.widget.ConstraintLayout>